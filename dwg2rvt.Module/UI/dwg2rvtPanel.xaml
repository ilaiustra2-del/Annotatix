<UserControl x:Class="dwg2rvt.Module.UI.dwg2rvtPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White"
             FontFamily="Segoe UI">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Active View Label -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Активный вид: " 
                       FontSize="13" 
                       Foreground="#333333"/>
            <TextBlock x:Name="txtActiveView" 
                       Text="Этаж 01"
                       FontSize="13" 
                       Foreground="#333333"/>
        </StackPanel>
        
        <!-- DWG File Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="DWG файл для анализа:" 
                       FontSize="13" 
                       Foreground="#333333"
                       Margin="0,0,0,4"/>
            <ComboBox x:Name="cmbImportedFiles"
                      Height="28"
                      FontSize="13"
                      BorderBrush="#ADADAD"
                      Background="White">
                <ComboBoxItem Content="Эксперимент с плаником DWGdata" IsSelected="True"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Table (visual representation via Grid) -->
        <Border Grid.Row="2" 
                BorderBrush="#D0D0D0" 
                BorderThickness="1"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Table Header -->
                <Grid Grid.Row="0" Background="#F0F0F0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="0,0,1,1" Padding="6,6">
                        <!-- checkbox header placeholder -->
                    </Border>
                    <Border Grid.Column="1" BorderBrush="#D0D0D0" BorderThickness="0,0,1,1" Padding="6,6">
                        <TextBlock Text="Наименование блока" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                    <Border Grid.Column="2" BorderBrush="#D0D0D0" BorderThickness="0,0,1,1" Padding="6,6">
                        <TextBlock Text="Кол-во" FontSize="11" FontWeight="SemiBold" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="3" BorderBrush="#D0D0D0" BorderThickness="0,0,1,1" Padding="6,6">
                        <TextBlock Text="Семейство для расстановки" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                    <Border Grid.Column="4" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="6,6">
                        <TextBlock Text="Действие" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </Grid>
                
                <!-- Table Body (dynamic content) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="statusStackPanel">
                        <!-- Status text area (hidden by default, shown programmatically) -->
                        <TextBlock x:Name="txtStatus" 
                                   TextWrapping="Wrap" 
                                   FontFamily="Consolas"
                                   FontSize="11"
                                   Foreground="#495057"
                                   Margin="8"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Action Buttons Row -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,12,0,0">
            <Button x:Name="btnAnalyze"
                    Content="Анализировать"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnAnalyzeByName_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="btnSelectAll"
                    Content="Все"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnSelectAll_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="btnSelectNone"
                    Content="Ни одного"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnSelectNone_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="btnPlaceSelected"
                    Content="Разместить выделенное"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnPlaceSelected_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="btnPlaceAll"
                    Content="Расставить все"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnPlaceElements_Click"
                    IsEnabled="False"/>
        </StackPanel>
        
        <!-- Status GroupBox -->
        <GroupBox Grid.Row="4"
                  Header="Статус"
                  MinHeight="50"
                  BorderBrush="#D0D0D0"
                  FontSize="12"
                  Margin="0,12,0,0">
            <TextBlock x:Name="txtProgress"
                       Padding="8"
                       FontSize="12"
                       Foreground="#333333"
                       TextWrapping="Wrap"/>
        </GroupBox>
        
        <!-- Footer Buttons - REMOVED (not needed) -->
    </Grid>
</UserControl>
