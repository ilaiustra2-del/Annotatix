<Window x:Class="dwg2rvt.UI.MainHubPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер плагинов" 
        Height="584" 
        Width="767"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Dynamic Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock x:Name="txtTitle" 
                           Text="Менеджер плагинов" 
                           FontSize="24" 
                           FontWeight="Normal" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"/>
                
                <!-- Version Number -->
                <TextBlock x:Name="txtVersion" 
                           Text="v 2.0" 
                           FontSize="12" 
                           FontWeight="Normal" 
                           Foreground="#888888"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                
                <!-- Back Button (initially hidden) -->
                <Button x:Name="btnBack" 
                        Content="← Назад" 
                        Visibility="Collapsed" 
                        Click="BtnBack_Click"
                        Padding="12,6"
                        Margin="20,0,0,0"
                        Background="White"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8E8E8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Plugin Grid -->
            <ContentControl x:Name="MainContent" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- First Row of Plugins -->
                    <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <!-- dwg2rvt Button -->
                        <StackPanel Margin="0,0,15,15" Cursor="Hand" MouseLeftButtonUp="Dwg2rvt_Click">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"
                                    Padding="15">
                                <Image Source="pack://application:,,,/UI/icons/dwg2rvt80.png" 
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>
                            <TextBlock Text="DWG2RVT" 
                                       FontSize="11" 
                                       FontWeight="Normal" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Placeholder 1 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                            <TextBlock Text="DWG2RVT" 
                                       FontSize="11" 
                                       FontWeight="Normal" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"
                                       Opacity="0"/>
                        </StackPanel>

                        <!-- Placeholder 2 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                            <TextBlock Text="DWG2RVT" 
                                       FontSize="11" 
                                       FontWeight="Normal" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"
                                       Opacity="0"/>
                        </StackPanel>

                        <!-- Placeholder 3 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                            <TextBlock Text="DWG2RVT" 
                                       FontSize="11" 
                                       FontWeight="Normal" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"
                                       Opacity="0"/>
                        </StackPanel>

                        <!-- Placeholder 4 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                            <TextBlock Text="DWG2RVT" 
                                       FontSize="11" 
                                       FontWeight="Normal" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"
                                       Opacity="0"/>
                        </StackPanel>

                        <!-- Placeholder 5 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                            <TextBlock Text="DWG2RVT" 
                                       FontSize="11" 
                                       FontWeight="Normal" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"
                                       Opacity="0"/>
                        </StackPanel>
                    </WrapPanel>
                    
                    <!-- Second Row of Placeholders -->
                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                        <!-- Placeholder 6 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                        </StackPanel>

                        <!-- Placeholder 7 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                        </StackPanel>

                        <!-- Placeholder 8 -->
                        <StackPanel Margin="0,0,15,15">
                            <Border Width="110" Height="110" 
                                    Background="#E0E0E0" 
                                    CornerRadius="12"/>
                        </StackPanel>
                    </WrapPanel>
                </Grid>
            </ContentControl>
        </Grid>
        
        <!-- Right Sidebar -->
        <Border x:Name="RightSidebar"
                Grid.Column="1" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1,0,0,0"
                Width="320"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Учётная запись" 
                           FontSize="20" 
                           FontWeight="Normal" 
                           Margin="0,0,0,20"/>
                
                <Button x:Name="btnAuth"
                        Content="Войти в учётную запись" 
                        Click="BtnAuth_Click"
                        Padding="15,10"
                        Background="#E8E8E8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,30">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <TextBlock Text="Новости" 
                           FontSize="20" 
                           FontWeight="Normal" 
                           Margin="0,0,0,15"/>
                
                <Border Background="#F0F0F0" 
                        CornerRadius="6"
                        Height="200"
                        Padding="15">
                    <TextBlock Text="Здесь будут отображаться новости и обновления..." 
                               TextWrapping="Wrap"
                               Foreground="#888888"/>
                </Border>
                
                <!-- User Status (bottom right corner) -->
                <TextBlock x:Name="txtUserStatus"
                           Text=""
                           FontSize="11"
                           Foreground="#28A745"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
