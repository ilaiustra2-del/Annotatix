             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <!-- Main Content -->
    <Border Padding="30" Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Модуль HVAC" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center"
                       Foreground="#212529"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Функционал модуля HVAC находится в разработке" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Foreground="#6C757D"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       MaxWidth="400"/>
        </StackPanel>
    </Border>
</UserControl>
