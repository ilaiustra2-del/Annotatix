<Window x:Class="HVACSuperScheme.Commands.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки HVAC SuperScheme"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
    </Window.Resources>
    
    <Border Padding="20" BorderBrush="#CCCCCC" BorderThickness="1">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Настройки синхронизации"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>
            
            <!-- Updater Sync Checkbox -->
            <Border Background="White" 
                    Padding="15"
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="UpdaterSyncCheckBox"
                              IsChecked="True"
                              VerticalAlignment="Center"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Синхронизация включена"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                        <TextBlock Text="Автоматическое обновление расходов воздуха"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="Сохранить"
                        Click="SaveButton_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button x:Name="CancelButton"
                        Content="Отмена"
                        Click="CancelButton_Click"
                        Background="#9E9E9E"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
